<resources>

    <properties>
		<!-- Updated date : 2023-11-23 -->
    	<property id="appVersion" type="string">1.1.6</property>
        <property id="powerMode" type="number">0</property>
        <property id="theme" type="number">1</property>
        <property id="PowerZoneBar" type ="boolean">true</property>
        <property id="PowerZoneHistory" type ="boolean">true</property>
        <property id="calcPowerZone" type ="boolean">true</property>
        <property id="calcTypePZ" type="number">0</property>
        <property id="FTP" type="number">200</property>
        <property id="manualPowerZone" type ="boolean">false</property>
        <property id="Zone1maxValue" type ="number">110</property>
        <property id="Zone2maxValue" type ="number">150</property>
        <property id="Zone3maxValue" type ="number">180</property>
        <property id="Zone4maxValue" type ="number">210</property>
        <property id="Zone5maxValue" type ="number">240</property>
        <property id="Zone6maxValue" type ="number">300</property>
        <property id="averageSec" type="number">3</property>
        <property id="averageMode" type="number">2</property>
        <property id="fontSize" type="number">0</property>
        <property id="threshold" type="number">5</property>
        <property id="personalPower" type="number">150</property>
        <property id="colorHigh" type="number">3</property>
        <property id="colorLow" type="number">8</property>
        <property id="ShowTraining" type="boolean">false</property>
    </properties>

    <settings>
        <setting propertyKey="@Properties.appVersion" title="@Strings.AppVersionTitle">
        	<settingConfig type="alphaNumeric" readonly="true" />
    	</setting>
    		
        <setting propertyKey="@Properties.theme" title="@Strings.themeTitle">
            <settingConfig type="list">
                <listEntry value="0">@Strings.themeNone</listEntry>
                <listEntry value="1">@Strings.themeRed</listEntry>
                <listEntry value="2">@Strings.themeRedInvert</listEntry>
                <listEntry value="3">@Strings.themeZones</listEntry>
            </settingConfig>
        </setting>

		<setting propertyKey="@Properties.ShowTraining" title="@Strings.ShowTraining_title">
			<settingConfig type="boolean" />
		</setting>

		<setting propertyKey="@Properties.PowerZoneBar" title="@Strings.PowerZoneBar_title">
			<settingConfig type="boolean" />
		</setting>

		<setting propertyKey="@Properties.PowerZoneHistory" title="@Strings.PowerZoneHistory_title">
			<settingConfig type="boolean" />
		</setting>

		<setting propertyKey="@Properties.calcPowerZone" title="@Strings.calcPowerZone_title">
			<settingConfig type="boolean" />
		</setting>

        <setting propertyKey="@Properties.calcTypePZ" title="@Strings.calcTypePZ_title">
            <settingConfig type="list">
                <listEntry value="0">@Strings.DefaultPZ</listEntry>
                <listEntry value="1">@Strings.StagesPZ</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.FTP" title="@Strings.FTP_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
		<setting propertyKey="@Properties.manualPowerZone" title="@Strings.manualPowerZone_title">
			<settingConfig type="boolean" />
		</setting>

        <setting propertyKey="@Properties.Zone1maxValue" title="@Strings.Zone1maxValue_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
        <setting propertyKey="@Properties.Zone2maxValue" title="@Strings.Zone2maxValue_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
        <setting propertyKey="@Properties.Zone3maxValue" title="@Strings.Zone3maxValue_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
        <setting propertyKey="@Properties.Zone4maxValue" title="@Strings.Zone4maxValue_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
        <setting propertyKey="@Properties.Zone5maxValue" title="@Strings.Zone5maxValue_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
        <setting propertyKey="@Properties.Zone6maxValue" title="@Strings.Zone6maxValue_title">
            <settingConfig type="numeric" min="40" max="4000" />
        </setting>
		
        <setting propertyKey="@Properties.averageSec" title="@Strings.averageSec">
            <settingConfig type="list">
                <listEntry value="1">@Strings.modeNone</listEntry>
                <listEntry value="3">@Strings.mode3s</listEntry>
                <listEntry value="10">@Strings.mode10s</listEntry>
                <listEntry value="30">@Strings.mode30s</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.averageMode" title="@Strings.averageMode">
            <settingConfig type="list">
                <listEntry value="0">@Strings.modeAvg_title</listEntry>
                <listEntry value="1">@Strings.modeMax_title</listEntry>
                <listEntry value="2">@Strings.modeNP_title</listEntry>
                <listEntry value="3">@Strings.modeLap_title</listEntry>
                <listEntry value="4">@Strings.modeAvgMax_title</listEntry>
                <listEntry value="5">@Strings.modeAvgNP_title</listEntry>
                <listEntry value="6">@Strings.modeLapNP_title</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.fontSize" title="@Strings.fontSize">
            <settingConfig type="list">
                <listEntry value="0">@Strings.modeSmall</listEntry>
                <listEntry value="1">@Strings.modeLarge</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.powerMode" title="@Strings.powerMode">
            <settingConfig type="list">
                <listEntry value="0">@Strings.modeAverage</listEntry>
                <listEntry value="1">@Strings.modePersonal</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.threshold" title="@Strings.threshold">
            <settingConfig type="numeric" min="0" max="100" />
        </setting>

        <setting propertyKey="@Properties.personalPower" title="@Strings.personalPower">
            <settingConfig type="numeric" min="0" max="200" />
        </setting>

        <setting propertyKey="@Properties.colorHigh" title="@Strings.colorHigh">
        	<settingConfig type="list">
        		<listEntry value="0">@Strings.colorRed</listEntry>
        		<listEntry value="1">@Strings.colorOrange</listEntry>
        		<listEntry value="2">@Strings.colorYellow</listEntry>
        		<listEntry value="3">@Strings.colorGreen</listEntry>
        		<listEntry value="4">@Strings.colorBlue</listEntry>
        		<listEntry value="5">@Strings.colorPurple</listEntry>
        		<listEntry value="6">@Strings.colorPink</listEntry>
        		<listEntry value="7">@Strings.colorGray</listEntry>
        	</settingConfig>
        </setting>

        <setting propertyKey="@Properties.colorLow" title="@Strings.colorLow">
        	<settingConfig type="list">
        		<listEntry value="0">@Strings.colorRed</listEntry>
        		<listEntry value="1">@Strings.colorOrange</listEntry>
        		<listEntry value="2">@Strings.colorYellow</listEntry>
        		<listEntry value="3">@Strings.colorGreen</listEntry>
        		<listEntry value="4">@Strings.colorBlue</listEntry>
        		<listEntry value="5">@Strings.colorPurple</listEntry>
        		<listEntry value="6">@Strings.colorPink</listEntry>
        		<listEntry value="7">@Strings.colorGray</listEntry>
        		<listEntry value="8">@Strings.colorDefault</listEntry>
        	</settingConfig>
        </setting>
        
    </settings>
</resources>
